@model IEnumerable<projBCC2.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Compras</h1>

<p>
     <a asp-action="Create" class="btn btn-light">Registrar Compra</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.funcionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantidadeCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorUN)
            </th>
            <th>
                Total:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

 @{float totalGeral = 0;}
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.funcionario.nomeFuncionarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empresa.nomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantidadeCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorUN)
            </td>
            @{
                float total = item.quantidadeCompra * item.valorUN;
                totalGeral = totalGeral + total;
                }
            <td>
               @total.ToString("C2")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div align="right">
    <h3>Total Geral: @totalGeral.ToString("C2")</h3>
</div>
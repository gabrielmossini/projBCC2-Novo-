@model projBCC2.Models.Compra

@{
    ViewData["Title"] = "Registro de Compra";
}

<h1>Menu de Registro de Clientes</h1>

<h4>Insira os dados Abaixo para Registrar Cliente.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="funcionarioid" class="control-label"></label>
                <select asp-for="funcionarioid" class ="form-control" asp-items="ViewBag.funcionarioid"></select>
            </div>
            <div class="form-group">
                <label asp-for="empresaid" class="control-label"></label>
                <select asp-for="empresaid" class ="form-control" asp-items="ViewBag.empresaid"></select>
            </div>
            <div class="form-group">
                <label asp-for="produto" class="control-label"></label>
                <input asp-for="produto" class="form-control" />
                <span asp-validation-for="produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data" class="control-label"></label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidadeCompra" class="control-label"></label>
                <input asp-for="quantidadeCompra" class="form-control" id="quantidade" onblur="Calcular()" />
                <span asp-validation-for="quantidadeCompra" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="valorUN" class="control-label"></label>
                <input asp-for="valorUN" class="form-control" id="valor" onblur="Calcular()" />
                <span asp-validation-for="valorUN" class="text-danger" ></span>
            </div>

            <br />
            <div class="form-group">
                <label class="control-label"> Total: </label>
                <span id="total"> </span>
            </div>
            <br />

            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-light">Retornar</a>
            </div>
            </br>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function Calcular() {
            var qtde = Number(document.getElementById("quantidade").value);
            var valor = Number(document.getElementById("valor").value);
            var total = document.getElementById("total");

            if (total.textContent == undefined) {
                var calc = qtde * valor;
                var f = calc.toLocaleString('pt-br', { style: 'currency', currency: 'BRL' });
                total.textContent == f;
            }
            else {
                var calc = qtde * valor;
                var f = calc.toLocaleString('pt-br', { style: 'currency', currency: 'BRL' });
                total.innerText = f;
            }
        }
    </script>
}

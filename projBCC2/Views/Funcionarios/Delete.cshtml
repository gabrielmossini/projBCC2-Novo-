@model projBCC2.Models.Funcionario

@{
    ViewData["Title"] = "Exclusão de Funcionario";
}

<h1>Menu de Exclusão de Funcionarios.</h1>

<h3>Você tem certeza que deseja excluir esse Funcionario?</h3>
<div>
    <h4>Funcionario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nomeFuncionarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomeFuncionarios)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.funcao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.funcao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">Retornar</a>
    </form>
</div>

@model IEnumerable<projBCC2.Models.Funcionario>

@{
    ViewData["Title"] = "Inserir Funcionarios";
}

<h1>Funcionarios</h1>

<p>
    <a asp-action="Create" class="btn btn-light">Registrar Funcionarios</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomeFuncionarios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.funcao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomeFuncionarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.funcao)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

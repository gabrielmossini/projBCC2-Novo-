@model IEnumerable<projBCC2.Models.Empresa>

@{
    ViewData["Title"] = "Inserir Empresa";
}

<h1>Empresas</h1>

<p>
    <a asp-action="Create" class="btn btn-light">Registrar Empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomeEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estadoEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadoEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cidade)
            </td>
            <td>
               <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Detalhes</a> |
               <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
               <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

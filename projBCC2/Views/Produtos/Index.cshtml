@model IEnumerable<projBCC2.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.compra.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.compra.quantidadeCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.compra.valorUN)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.compra.produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.compra.quantidadeCompra)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.compra.valorUN)
                </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
